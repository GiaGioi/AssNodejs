<div class="row">
    <div class="col-8 offset-2">
        <form action="/hotel/save-add" method="post" enctype="multipart/form-data">
        <h1 class="form-group">Thêm khách sạn</h1>
            <div class="form-group">
                <label for="">Tên khách sạn</label>
                <input type="text"  name="name" class="form-control">
            </div>
            <div>
                <label for="">Ảnh khách sạn</label>
                <input type="file" name="image" width="150" class="form-control-file">
            </div>
            <div class="form-group">
                <label for="">Thành phố</label>
                <input type="text"  name="city" class="form-control">
            </div>
            <div class="form-group">
                <label for="">Địa chỉ</label>
                <input type="text"  name="address" class="form-control">
            </div>
            <div class="form-group">
                <label for="">Chủ sở hữu</label>
                <input type="text"  name="owner" class="form-control">
            </div>
            <div class="form-group">
                <label for="">Chứng minh thư</label>
                <input type="text"  name="license_number" class="form-control">
            </div>
            <div class="form-group">
                <label for="">Số tầng</label>
                <input type="text"  name="total_floor" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">Thêm vào</button>
             <a href="/" class="btn btn-danger">Hủy</a>
        </form>
    </div>
</div>