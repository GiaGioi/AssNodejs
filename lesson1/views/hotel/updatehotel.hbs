<div class="row">
    <div class="col-8 offset-2">
        <form action="/hotel/save-edit" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{cates._id}}">
            <h1 class="form-group">Sửa khách sạn</h1>
            <div class="form-group">
                <label for="">Tên khách sạn</label>
                <input type="text" class="form-control" name="name" value="{{cates.name}}">
            </div>
            <div class="form-group">
                <img src="{{cates.image}}" width="150">
                <br>
                <label for="">Ảnh khách sạn</label>
                <input type="file" name="image" class="form-control-file" id="exampleFormControlFile1">
            </div>
            <div class="form-group">
                <label for="">Thành phố</label>
                <input type="text" name="city" class="form-control" value="{{cates.city}}">
            </div>
            <div class="form-group">
                <label for="">Địa chỉ</label>
                <input type="text" name="address" class="form-control" value="{{cates.address}}">
            </div>
            <div class="form-group">
                <label for="">Chủ sở hữu</label>
                <input type="text" name="owner" class="form-control" value="{{cates.owner}}">
            </div>
            <div class="form-group">
                <label for="">Chứng minh thư</label>
                <input type="text" name="license_number" class="form-control" value="{{cates.license_number}}">
            </div>
            <div class="form-group">
                <label for="">Số tầng</label>
                <input type="text"  name="total_floor" class="form-control" value="{{cates.total_floor}}">
            </div>
            <button type="submit" class="btn btn-success">Lưu lại</button>
            <a href="/" class="btn btn-danger">Hủy</a>
        </form>
    </div>
</div>