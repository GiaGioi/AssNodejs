<style>
    .table-hover tbody tr:hover {
        background: rgba(150, 214, 158, 0.47);
    }
</style>
<div class="column">
    <div class="col-8 offset-2">
        <table class="table table-hover">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav nav-tabs">
                    <a class="btn btn-outline-success" id="home-tab" data-toggle="tab" href="/" role="tab"
                        aria-controls="home" aria-selected="true">Khách sạn</a>
                </li>
                <li class="nav nav-tabs">
                    <a class="btn btn-outline-success" id="profile-tab" data-toggle="tab" href="/room/index"
                        role="tab" aria-controls="profile" aria-selected="false">Phòng</a>
                </li>
            </ul>
            <thead>
                <tr>
                    <th scope="col">Tên khách sạn </th>
                    <th scope="col">Hình ảnh</th>
                    <th scope="col">Thành phố</th>
                    <th scope="col">Địa chỉ</th>
                    <th scope="col">Chủ sở hữu</th>
                    <th scope="col">Chứng minh thư</th>
                    <th scope="col">Số tầng</th>
                    <th scope="col">
                        <a href="/hotel/addhotel" class="btn btn-sm btn-success">Thêm</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    {{#each cates}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>
                        <img src="{{this.image}}" width="100" height="80">
                    </td>
                    <td>{{this.city}}</td>
                    <td>{{this.address}}</td>
                    <td>{{this.owner}}</td>
                    <td>{{this.license_number}}</td>
                    <td>{{this.total_floor}}</td>
                    <td>
                        <a href="/hotel/updatehotel/{{this._id}}" class="btn btn-sm btn-primary">Sửa</a>
                    </td>
                    <td>
                        <a href="/hotel/deletehotel/{{this._id}}" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
                {{/each}}
                </tr>
            </tbody>
        </table>
    </div>
</div>